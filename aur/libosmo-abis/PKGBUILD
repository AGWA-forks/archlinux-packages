# Maintainer: Yuval Adam <yuval at y3xz dot com> PGP-Key: 271386AA2EB7672F

pkgname=libosmo-abis
pkgver=0.3.1
pkgrel=1
pkgdesc="Osmocom library for A-bis interface"
arch=('any')
url="http://openbsc.osmocom.org/trac/wiki/libosmo-abis"
license=(GPL)
depends=('libosmocore' 'ortp')
source=("http://git.osmocom.org/${pkgname}/snapshot/${pkgname}-${pkgver}.tar.gz")
sha256sums=("fe973cf8f7154b0854bc38c51670e8c443bb22bd9b55ad92bf123f94c52181e5")

build() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  autoreconf -i
  ./configure --prefix=/usr
  make
}

package() {
  cd "${srcdir}/${pkgname}-${pkgver}"
  make DESTDIR=$pkgdir install
}

