# Maintainer: Yuval Adam <yuv dot adm at gmail dot com> PGP-Key: CC2115C12D99D2F0

pkgname=rocket
pkgver=0.1.0
pkgrel=1
pkgdesc="App container runtime"
arch=('x86_64')
url="https://github.com/coreos/rocket"
license=(apache)
provides=('rocket')
source=("https://github.com/coreos/rocket/releases/download/v${pkgver}/${pkgname}-v${pkgver}.tar.gz")
sha1sums=('a190ed8db61190986ada7189fd65360e37c0e48d')

package() {
  cd $srcdir/${pkgname}-v${pkgver}
  install -Dm755 rkt ${pkgdir}/usr/bin/rkt
}

